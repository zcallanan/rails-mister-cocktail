
  <div class="container">
   <div class="cocktail-banner" style="background-image: url(<%= asset_path @cocktail.picture_url %>) ;">
    <div class="row justify-content-start mt-n5">
      <div class="col-5">
      </div>
      <div class="col-7">
        <div class="row show-title-card align-items-center justify-content-center" data-aos="flip-down" data-aos-duration="1000" data-aos-delay="200">
            <h2 class="mb-0 text-center"><strong><%= @cocktail.name %></strong>
            <%= link_to edit_cocktail_path do %>
             <i class="fas fa-edit icon"></i> </h2>
            <% end %>
        </div>
      </div>
    </div>

    <div class="row justify-content-start">
      <div class="col-5">
      </div>
      <div class="col-7">
        <div class="row show-card-product align-items-center justify-content-start" data-aos="flip-down" data-aos-duration="1000" data-aos-delay="200">
          <div class="col-10 ml-3">
            <p class="mt-4 mb-4"><%= @cocktail.description %></p>
          </div>
          <div class="col-1 d-flex text-nowrap justify-content-end">
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-start">
      <div class="col-5">
      </div>
      <div class="col-7">
        <div class="ingredient-card-product" data-aos="flip-down" data-aos-duration="1000" data-aos-delay="200">
          <div class="row align-items-center justify-content-center mt-4">
              <h4><strong>Doses</strong>
              <%= link_to new_cocktail_dose_path(@cocktail) do %>
                <i class="fas fa-plus icon"></i>
              <% end %></h4>
          </div>
          <div class="row justify-content-between align-items-center">
            <div class="col-8">
              <ul>
              <% @cocktail.doses.each do |dose| %>
                <% @cocktail.ingredients.each do |ingredient| %>
                  <% if dose.ingredient_id == ingredient.id %>
                    <li class="ml-5">
                      <%= ingredient.name %> • <%= dose.description %> •
                      <%= link_to dose_path(dose), method: :delete, data: {
          confirm: 'Are you sure?'} do %>
                        <i class="far fa-trash-alt text-info icon"></i>
                      <% end %>
                    </li>
                  <% end %>
                <% end %>
              <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



