<div class="cocktail-banner" style="background-image: url(<%= asset_path @cocktail.picture_url %>) ;">
  <div class="container">

    <div class="row justify-content-start mt-n5">
      <div class="col-2">
      </div>
      <div class="col-10">
        <div class="row show-card-product align-items-center">
          <div class="col-8">
            <h2><%= @cocktail.name %></h2>
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-start">
      <div class="col-3">
      </div>
      <div class="col-9">
        <div class="row show-card-product align-items-center justify-content-between">
          <div class="col-8 ml-3">
            <p><%= @cocktail.description %>.</p>
          </div>
          <div class="col-3 d-flex text-nowrap justify-content-end mr-3">
            <%= link_to "Edit Cocktail", edit_cocktail_path, class: "btn btn-secondary" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-start">
      <div class="col-4">
      </div>
      <div class="col-8">
        <div class="ingredient-card-product">
          <div class="row align-items-center justify-content-center">
            <h2 class="mt-4"><strong>Ingredients</strong></h2>
          </div>
          <div class="row justify-content-between align-items-center">
            <div class="col-8">
              <ul>
              <% @cocktail.doses.each do |dose| %>
                <% @cocktail.ingredients.each do |ingredient| %>
                  <% if dose.ingredient_id == ingredient.id %>
                    <li class="ml-5"> <%= ingredient.name %> - <%= dose.description %>
                      <%= link_to "(delete)", dose_path(dose), method: :delete, data: {
          confirm: 'Are you sure?'}  %></li>
                  <% end %>
                <% end %>
              <% end %>
            </ul>
            </div>
            <div class="col-3 mr-3 d-flex justify-content-end">
              <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: "btn btn-dark mb-3 w-100" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



