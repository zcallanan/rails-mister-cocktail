<div class="row justify-content-center">
  <div class="col-6">
    <h1 class="title">Add a Dose</h1>
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description %>
      <%= f.association :ingredient, label_method: :name, value_method: :id, include_blank: false, input_html: { class: 'select2' } %>
      <%= f.hidden_field :cocktail_id %>
      <%= f.submit class: "btn btn-dark"%>
    <% end %>
  </div>
</div>
